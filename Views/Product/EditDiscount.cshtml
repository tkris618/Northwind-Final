@model Discount

<h2>Edit Discount</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="EditDiscount" method="post">
  <input type="hidden" name="DiscountId" value="@Model.DiscountId" />
  <div class="form-group">
    <label asp-for="@Model.Title">Title:</label>
    <input asp-for="@Model.Title" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="@Model.Description">Description:</label>
    <input asp-for="@Model.Description" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="@Model.DiscountPercent">Discount Percent:</label>
    <input asp-for="@Model.DiscountPercent" class="form-control" />
  </div>
  <div class="form-group mt-3">
    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-controller="Product" asp-action="DiscountDetail" class="btn btn-outline-secondary">Cancel</a>
  </div>
  
</form>
